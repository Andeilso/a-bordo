<%- include("partials/header.ejs", {title: "Cadastrar - Turmas"}) %>

<body id="classes-form">
    <header>
        <h1>aBordo</h1>
    </header>
    <nav>
        <h2>Cadastrar</h2>
        <ul>
            <li><button type="button">Dados pessoais</button></li>
            <li><button type="button">Escolas</button></li>
            <li><button class="selected" type="button">Turmas</button></li>
        </ul>
    </nav>
    <form action="/register/classes" method="POST" autocomplete="on">

        <main>
            <section>
                <div class="instances-list">
                    <button type="button" class="selected" id="school0" onclick="select()">Escola 1</button>
                </div>

                <div id="new-instances">
                    <div class="instances-list">
                        <button type="button" class="selected" id="class0" onclick="select()">Turma 1</button>
                    </div>
                    <button type="button" class="btn-add" id="add-instance" onclick="addInstance()">+</button>
                    <button type="button" id="del-instance" onclick="delInstance()" disabled>Excluir</button>
                </div>

                <div id="gray-box">
                    <div id="form-box">
                        <div id="class-code">
                            <label for="class">Turma</label>
                            <input type="text" name="class" id="class" placeholder="Número da turma" required>
                        </div>

                        <p>Nesta turma, eu leciono...</p>
                        <div id="new-courses">
                            <select id="course1" name="course1" required>
                                <option value="" disabled selected>Escolher disciplina</option>
                                <option value="arts">Artes</option>
                                <option value="biology">Biologia</option>
                                <option value="sciences">Ciências</option>
                                <option value="phys-ed">Educação Física</option>
                                <option value="philosophy">Filosofia</option>
                                <option value="physics">Física</option>
                                <option value="geography">Geografia</option>
                                <option value="geomethy">Geometria</option>
                                <option value="history">História</option>
                                <option value="literature">Literatura</option>
                                <option value="math">Matemática</option>
                                <option value="music">Música</option>
                                <option value="spanish-lang">Língua Espanhola</option>
                                <option value="french-lang">Língua Francesa</option>
                                <option value="english-lang">Língua Inglesa</option>
                                <option value="portuguese-lang">Língua Portuguesa</option>
                                <option value="chemistry">Química</option>
                                <option value="writing">Redação</option>
                                <option value="sociology">Sociologia</option>
                                <option value="drama">Teatro</option>
                            </select>

                            <div class="buttons">
                                <button type="button" class="btn-add" id="add-course" disabled>+</button>
                                <button type="button" class="btn-del" id="del-course" disabled>-</button>
                            </div>
                        </div>

                        <div id="students-list">
                            <div id="heading">
                                <span>Nº</span>
                                <span>Aluno</span>
                            </div>
                            <div class="students" id="student1">
                                <input type="number" name="id1" value="1" id="id1">
                                <input type="text" name="name1" id="name1" placeholder="Nome do aluno">

                                <label for="dps-student1" class="checkbox-container">Dependência
                                    <input type="checkbox" name="dps-student1" class="dps-checkbox" id="dps-student1">
                                    <span class="checkmark"></span>
                                </label>

                                <div class="course-take" hidden>
                                    <select name="dp1-student1" id="dp1-student1">
                                        <option value="" disabled selected>Dependência em...</option>
                                        <option value="arts">Artes</option>
                                        <option value="biology">Biologia</option>
                                        <option value="sciences">Ciências</option>
                                        <option value="phys-ed">Educação Física</option>
                                        <option value="philosophy">Filosofia</option>
                                        <option value="physics">Física</option>
                                        <option value="geography">Geografia</option>
                                        <option value="geomethy">Geometria</option>
                                        <option value="history">História</option>
                                        <option value="literature">Literatura</option>
                                        <option value="math">Matemática</option>
                                        <option value="music">Música</option>
                                        <option value="spanish-lang">Língua Espanhola</option>
                                        <option value="french-lang">Língua Francesa</option>
                                        <option value="english-lang">Língua Inglesa</option>
                                        <option value="portuguese-lang">Língua Portuguesa</option>
                                        <option value="chemistry">Química</option>
                                        <option value="writing">Redação</option>
                                        <option value="sociology">Sociologia</option>
                                        <option value="drama">Teatro</option>
                                    </select>

                                    <button type="button" class="btn-add" id="add-dp">+</button>
                                    <button type="button" class="btn-del" id="del-dp" disabled>-</button>
                                </div>
                            </div>

                            <div class="students" id="student2">
                                <input type="number" name="id2" value="2" id="id2">
                                <input type="text" name="name2" id="name2" placeholder="Nome do aluno">

                                <label for="dps-student2" class="checkbox-container">Dependência
                                    <input type="checkbox" name="dps-student2" class="dp-checkbox" id="dps-student2">
                                    <span class="checkmark"></span>
                                </label>

                                <div class="course-retake" hidden>
                                    <select name="dp1-student2" id="dp1-student2">
                                        <option value="" disabled selected>Dependência em...</option>
                                        <option value="arts">Artes</option>
                                        <option value="biology">Biologia</option>
                                        <option value="sciences">Ciências</option>
                                        <option value="phys-ed">Educação Física</option>
                                        <option value="philosophy">Filosofia</option>
                                        <option value="physics">Física</option>
                                        <option value="geography">Geografia</option>
                                        <option value="geomethy">Geometria</option>
                                        <option value="history">História</option>
                                        <option value="literature">Literatura</option>
                                        <option value="math">Matemática</option>
                                        <option value="music">Música</option>
                                        <option value="spanish-lang">Língua Espanhola</option>
                                        <option value="french-lang">Língua Francesa</option>
                                        <option value="english-lang">Língua Inglesa</option>
                                        <option value="portuguese-lang">Língua Portuguesa</option>
                                        <option value="chemistry">Química</option>
                                        <option value="writing">Redação</option>
                                        <option value="sociology">Sociologia</option>
                                        <option value="drama">Teatro</option>
                                    </select>

                                    <button type="button" class="btn-add" id="addDp">+</button>
                                    <button type="button" class="btn-del" id="delDp" disabled>-</button>
                                </div>
                            </div>
                        </div>

                        <div id="gray-box-foot">
                        </div>
                    </div>
                </div>
                <div id="back-and-forth">
                    <button type="submit" id="back">
                        < Voltar</button>
                            <button type="submit" class="special" id="forth">Finalizar</button>
                </div>
            </section>
        </main>
    </form>
</body>

</html>